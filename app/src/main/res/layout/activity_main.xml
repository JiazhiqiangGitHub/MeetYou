<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zrj.dllo.meetyou.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#123465">
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/aty_main_meet_btn"
                    android:background="@drawable/btn_meet"
                    style="@style/MainAtyBtn"/>
                <TextView
                    android:id="@+id/aty_main_meet_tv"
                    android:text="@string/aty_main_meet_tv_text"
                    style="@style/MainAtyTv"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/aty_main_msg_btn"
                    android:background="@drawable/btn_msg"
                    style="@style/MainAtyBtn"/>
                <TextView
                    android:id="@+id/aty_main_msg_tv"
                    android:text="@string/aty_main_msg_tv_text"
                    style="@style/MainAtyTv"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/aty_main_weather_btn"
                    android:background="@drawable/btn_weather"
                    style="@style/MainAtyBtn"/>
                <TextView
                    android:id="@+id/aty_main_weather_tv"

                    android:text="@string/aty_main_weather_tv_text"
                    style="@style/MainAtyTv"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true">
            <Button
                android:id="@+id/aty_main_my_btn"
                android:background="@drawable/btn_my"
                style="@style/MainAtyBtn"/>
            <TextView
                android:id="@+id/aty_main_my_tv"
                android:text="@string/aty_main_my_tv_text"
                style="@style/MainAtyTv"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
